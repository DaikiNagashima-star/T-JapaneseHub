---
import ProfileMenu from './header/ProfileMenu.astro';

const navigation = [
  { name: 'Home', href: '/' },
  { name: 'Post', href: '/post' },
  { name: 'About', href: '/about' }
];
---

<header class="header">
  <div class="container">
    <a href="/" class="logo">
      <span class="logo-icon">ðŸ—¾</span>
      <span class="logo-text">T-JapaneseHub</span>
    </a>
    
    <nav class="nav">
      <ul class="nav-list">
        {navigation.map(item => (
          <li>
            <a href={item.href} class="nav-link">{item.name}</a>
          </li>
        ))}
      </ul>
    </nav>

    <ProfileMenu />
  </div>
</header>

<style>
  .header {
    background: white;
    padding: 1rem 0;
    border-bottom: 1px solid var(--border);
  }
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .logo {
    display: flex;
    align-items: center;
    text-decoration: none;
    color: var(--text-primary);
    font-weight: 700;
    font-size: 1.25rem;
    gap: 0.5rem;
  }
  .logo-icon {
    font-size: 1.5rem;
  }
  .nav-list {
    display: flex;
    list-style: none;
    gap: 2rem;
  }
  .nav-link {
    text-decoration: none;
    color: var(--text-primary);
    font-weight: 500;
    font-size: 0.9rem;
    transition: color 0.2s ease;
  }
  .nav-link:hover {
    color: var(--primary);
  }
</style>